---
import Layout from "../layouts/Layout.astro";
import Logo from "../assets/icones/logo_animania.svg";
---

<header
  class="px-6 py-2 fixed z-10 w-full flex items-center justify-between transition-all duration-300 ease-in-out bg-blue-300 shadow-md"
  id="header"
>
  <div class="flex items-center">
    <a href="/" aria-label="Accueil">
      <img src={Logo} alt="Logo Animania" class="h-10 w-auto" />
    </a>
  </div>

  <nav class="flex items-center gap-4">
    <ul class="flex space-x-4 text-lg font-semibold text-black">
      <li>
        <a href="/planning" class="hover:text-gray-700">Planning</a>
      </li>
      <li>
        <a href="/Tarifs" class="hover:text-gray-700">Tarifs et informations</a>
      </li>
      <li>
        <a href="/Contact" class="hover:text-gray-700">Contact</a>
      </li>
      <li>
        <a href="/A propos" class="hover:text-gray-700">À propos</a>
      </li>
      <li>
        <a href="/invite" class="bg-black text-white px-4 py-2 rounded-md"
          >Invité</a
        >
      </li>
    </ul>
  </nav>
</header>
